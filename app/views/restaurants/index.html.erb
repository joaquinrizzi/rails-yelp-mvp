<div class="container mt-3">
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <% @restaurants.each do |restaurant| %>
      <div class="card">
        <h2>
          <%= restaurant.name %>
        </h2>
        <p>
          <%= restaurant.address%>
        </p>
        <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary"%>
      </div>
      <%end%>
    </div>
  </div>
</div>
